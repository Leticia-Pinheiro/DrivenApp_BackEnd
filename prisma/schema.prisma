// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id       Int    @id @default(autoincrement())  
  createdAt DateTime @default(now())
  name     String
  email    String @unique
  password String
  type     userTypes
  companies companies[]
  teachers teachers[]
  tutors tutors[]
}

model companies {
  id       Int @id @default(autoincrement())
  name     String
  users    users @relation(fields: [userId], references: [id])
  userId   Int  
  teachers teachers[]
  tutors tutors[]
}

model teachers {
  id       Int @id @default(autoincrement())
  name     String
  users    users @relation(fields: [userId], references: [id])
  userId   Int 
  companies    companies @relation(fields: [companyId], references: [id])
  companyId   Int 
  disciplines    disciplines @relation(fields: [disciplineId], references: [id])
  disciplineId   Int  
  classes    classes @relation(fields: [classId], references: [id])
  classId   Int
}

model tutors{
  id       Int @id @default(autoincrement())
  name     String
  users    users @relation(fields: [userId], references: [id])
  userId   Int 
  companies    companies @relation(fields: [companyId], references: [id])
  companyId   Int 
  groups    groups @relation(fields: [groupId], references: [id])
  groupId   Int 
}

model classes {
  id       Int    @id @default(autoincrement())
  name     String @unique
  groups    groups[]
  teachers teachers[]
}

model groups{
  id Int @id @default(autoincrement())
  name String
  classes    classes @relation(fields: [classId], references: [id])
  classId   Int
  tutors    tutors[]
}


model disciplines {
  id       Int    @id @default(autoincrement())
  name     String @unique
  teachers teachers[]
}


enum userTypes {
  company 
  teacher
  tutor
  student
}

